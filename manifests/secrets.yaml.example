---
# Camera credentials - these are references to external secrets
# In production, use External Secrets Operator or Sealed Secrets
apiVersion: v1
kind: Secret
metadata:
  name: camera-recorder-secrets
  namespace: camera-system
type: Opaque
stringData:
  # Camera RTSP credentials
  CAMERA_1_URL: "rtsp://admin:PASSWORD@192.168.1.97:554/cam/realmonitor?channel=1&subtype=0"
  CAMERA_2_URL: "rtsp://admin:PASSWORD@192.168.1.13:554/cam/realmonitor?channel=1&subtype=0"
  
  # S3/SeaweedFS credentials
  S3_ACCESS_KEY: "admin"
  S3_SECRET_KEY: "admin"
---
